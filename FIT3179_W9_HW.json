{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 645,
  "height": 500,
  "background": "skyblue",
  "autosize": {"type": "fit", "contains": "padding"},
  "projection": {
    "type": "equirectangular",
    "center": [100, 10],
    "scale": 220
  },
  "data": {
    "url": "https://raw.githubusercontent.com/suna019/3179/main/data/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/suna019/3179/main/data/Stage%20reached%20per%20team.csv"
        },
        "key": "Team",
        "fields": ["Status"]
      }
    },
    {
      "calculate": "datum.Status ? datum.Status : 'Not Qualified'",
      "as": "Team Performance"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {
      "field": "Team Performance",
      "type": "nominal",
      "scale": {
        "domain": [
          "Not Qualified",
          "Group Stage",
          "Round of 16",
          "Quarter-finals",
          "Semi-finals",
          "Runner-up",
          "Winner"
        ],
        "range": [
          "grey",
          "red",
          "orange",
          "lightgreen",
          "saddlebrown",
          "silver",
          "Yellow"
        ]
      },
      "legend": {
        "title": "Stage Reached",
        "orient": "bottom",
        "offset": 1
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Team Performance", "type": "nominal", "title": "Stage Reached"}
    ]
  }
}
